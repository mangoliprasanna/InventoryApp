<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:padding="@dimen/activity_margin"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iconImg"
        android:layout_marginRight="@dimen/activity_margin"
        android:src="@drawable/ic_package"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/list_image_size"
        android:layout_height="@dimen/list_image_size" />

    <TextView
        android:id="@+id/prdName"
        android:layout_toRightOf="@id/iconImg"
        android:textStyle="bold"
        android:textSize="@dimen/list_prdName_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/prdPrice"
        android:layout_toRightOf="@id/iconImg"
        android:layout_below="@id/prdName"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/prdQty"
        android:layout_toRightOf="@id/iconImg"
        android:layout_below="@id/prdPrice"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSale"
        android:layout_alignParentRight="true"
        android:text="@string/list_button"
        android:textColor="@color/colorAccent"
        android:background="?attr/selectableItemBackground"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_height="match_parent" />

</RelativeLayout>